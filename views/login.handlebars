<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6">

      <h2>Login</h2>

      <form id="loginForm" class="form login-form mt-4" method="POST">
        <div class="form-group mb-3">
          <label for="email-login">email:</label>
          <input class="form-input form-control" type="text" id="email-login" name="email" />
        </div>
        <div class="form-group">
          <label for="password-login">password:</label>
          <input class="form-input form-control" type="password" id="password-login" name="password"/>
        </div>
        <div class="form-group mt-4 text-center">
          <button class="btn btn-primary" type="submit">login</button>
        </div>
      </form>

      <script src="/js/login.js"></script>
    
    </div>
  </div>
</div>