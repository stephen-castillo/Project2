<!-- views/signup.handlebars -->

<div class="container">
  <div class="row justify-content-center align-items-center vh-100">
    <div class="col-md-6">

      <h2>Sign Up</h2>

<!-- Display any flash messages -->
{{#if message}}
  <p class="{{message.type}}">{{message.text}}</p>
{{/if}}

      <form id="signupForm" class="form signup-form mt-4" action="/signup" method="POST">
        <div class="form-group mb-3">
          <label for="email-signup">email:</label>
          <input class="form-input form-control" type="text" id="email-signup" name="email"/>
        </div>
        <div class="form-group mb-3">
          <label for="set-username">Set username:</label>
          <input class="form-input form-control" type="text" id="set-username" name="username"/>
        </div>
        <div class="form-group mb-3">
          <label for="set-password">Set password:</label>
          <input class="form-input form-control" type="password" id="set-password" name="password"/>
        </div>
        <div class="form-group mt-4 text-center">
          <button class="btn btn-primary" type="submit">Create account</button>
        </div>
      </form>

      <script src="/js/signup.js"></script> <!-- replace with script for signup js after it is created under public folder -->

    </div>
  </div>
</div>