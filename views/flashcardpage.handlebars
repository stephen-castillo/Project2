<!-- Flashcard Review Page
   views/flashcardpage.handlebars-->

<h1>Flashcards</h1>

<div class="container">
   {{#each flashcards as |flashcard|}}
   <h3>{{this.title}}</h3>
   {{/each}}
</div>

<div id="flashcard-container" class="container">
  <div class="card">
      <div class="card-body">
         {{#each flashcards}}
            <div class="flashcard">
               <div class="flashcard-question">{{question}}</div>

                  <div class="flashcard-options-container">
                     {{#each shuffledOptions}}
                     <div class="flashcard-option">{{this}}</div>
                     {{/each}}
                  </div>
                        
                        <div class="flashcard-answer-container">
                           <div class="flashcard-answer">{{answer}}</div>
                        </div>

                     <button class="btn btn-primary flashcard-toggle-answer-btn">Show Answer</button>
            </div>
         {{/each}}
      </div>
  </div>
</div>


<script>

   const toggleAnswerBtns = document.querySelectorAll('.flashcard-toggle-answer-btn');

      toggleAnswerBtns.forEach(btn => {
      btn.addEventListener('click', () => {
         const answerContainer = btn.previousSibling.previousSibling;
         answerContainer.style.display = answerContainer.style.display === 'none' ? 'block' : 'none';
      });
});

</script>